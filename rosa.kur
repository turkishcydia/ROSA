clear
echo "[*] Rosa Dosya Sistemi İndiriliyor"
sleep 1
apt update
apt install proot-distro
sleep 1
wget -P $HOME/rosa.fs https://github.com/turkishcydia/ROSA/releases/download/rosafs/root.tar.gz
clear
echo "[*] Dosya Sistemi Ayıklanıyor"
tar -tvf $HOME/rosa.fs $HOME/fs
mv $HOME/fs $HOME/../usr/var/lib/proot-distro/installed-rootfs/rosa
wget -P $HOME/../usr/bin/rosa https://turkishcydia.github.io/ROSA/rosa.strt
clear
echo "ROSA Kuruldu! Başlatmak İçin 'rosa' yazın"
